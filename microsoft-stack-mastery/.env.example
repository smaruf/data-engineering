# ==================================
# MICROSOFT STACK MASTERY - ENVIRONMENT VARIABLES
# ==================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control!

# ==================================
# AZURE AUTHENTICATION
# ==================================
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here

# Azure Resource Group
AZURE_RESOURCE_GROUP=microsoft-stack-rg
AZURE_LOCATION=eastus

# ==================================
# AZURE STORAGE
# ==================================
AZURE_STORAGE_ACCOUNT_NAME=yourstorageaccount
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key-here
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=your-key;EndpointSuffix=core.windows.net

# Data Lake Gen2
AZURE_DATALAKE_ACCOUNT_NAME=yourdatalake
AZURE_DATALAKE_CONTAINER=raw-data
AZURE_DATALAKE_SAS_TOKEN=your-sas-token-here

# ==================================
# AZURE DATABASES
# ==================================
# Azure SQL Database
AZURE_SQL_SERVER=your-sql-server.database.windows.net
AZURE_SQL_DATABASE=your-database-name
AZURE_SQL_USERNAME=sqladmin
AZURE_SQL_PASSWORD=your-sql-password-here

# Azure Cosmos DB
AZURE_COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
AZURE_COSMOS_KEY=your-cosmos-key-here
AZURE_COSMOS_DATABASE=your-database-name
AZURE_COSMOS_CONTAINER=your-container-name

# ==================================
# AZURE DATA FACTORY
# ==================================
AZURE_DATA_FACTORY_NAME=your-adf-name
AZURE_DATA_FACTORY_RESOURCE_GROUP=your-adf-rg

# ==================================
# AZURE SYNAPSE ANALYTICS
# ==================================
AZURE_SYNAPSE_WORKSPACE_NAME=your-synapse-workspace
AZURE_SYNAPSE_SQL_POOL_NAME=your-sql-pool
AZURE_SYNAPSE_SPARK_POOL_NAME=your-spark-pool
AZURE_SYNAPSE_ENDPOINT=https://your-synapse-workspace.dev.azuresynapse.net

# ==================================
# AZURE DATABRICKS
# ==================================
DATABRICKS_HOST=https://adb-1234567890123456.7.azuredatabricks.net
DATABRICKS_TOKEN=dapi1234567890abcdef
DATABRICKS_CLUSTER_ID=your-cluster-id
DATABRICKS_WORKSPACE_ID=your-workspace-id

# ==================================
# MICROSOFT FABRIC
# ==================================
FABRIC_WORKSPACE_ID=your-workspace-id
FABRIC_WORKSPACE_NAME=your-workspace-name
FABRIC_CAPACITY_ID=your-capacity-id
FABRIC_LAKEHOUSE_ID=your-lakehouse-id
FABRIC_LAKEHOUSE_NAME=your-lakehouse-name
FABRIC_API_ENDPOINT=https://api.fabric.microsoft.com/v1

# ==================================
# AZURE EVENT HUBS
# ==================================
EVENT_HUB_NAMESPACE=your-eventhub-namespace
EVENT_HUB_NAME=your-eventhub-name
EVENT_HUB_CONNECTION_STRING=Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key
EVENT_HUB_CONSUMER_GROUP=$Default

# ==================================
# APACHE KAFKA
# ==================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=data-engineering-events
KAFKA_CONSUMER_GROUP=spark-consumers
KAFKA_SASL_USERNAME=your-kafka-username
KAFKA_SASL_PASSWORD=your-kafka-password

# ==================================
# NOSQL DATABASES
# ==================================
# MongoDB
MONGODB_CONNECTION_STRING=mongodb://localhost:27017/
MONGODB_DATABASE=data_engineering
MONGODB_COLLECTION=events

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# ==================================
# AZURE KEY VAULT
# ==================================
AZURE_KEY_VAULT_NAME=your-keyvault-name
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# ==================================
# SPARK CONFIGURATION
# ==================================
SPARK_MASTER=local[*]
SPARK_APP_NAME=Microsoft-Stack-Mastery
SPARK_EXECUTOR_MEMORY=4g
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_CORES=2
SPARK_SQL_SHUFFLE_PARTITIONS=200

# Delta Lake
DELTA_CHECKPOINT_LOCATION=/tmp/delta/_checkpoints
DELTA_LOG_CACHE_SIZE=1000

# ==================================
# MLFLOW
# ==================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=fabric-ml-pipeline
MLFLOW_ARTIFACT_ROOT=wasbs://mlflow@yourstorage.blob.core.windows.net/artifacts

# ==================================
# MONITORING AND LOGGING
# ==================================
LOG_LEVEL=INFO
AZURE_MONITOR_CONNECTION_STRING=InstrumentationKey=your-instrumentation-key
APPLICATION_INSIGHTS_KEY=your-app-insights-key

# ==================================
# CI/CD
# ==================================
ENVIRONMENT=development
DEPLOY_ENVIRONMENT=dev
CI_COMMIT_SHA=local-development

# GitLab CI
GITLAB_TOKEN=your-gitlab-token
GITLAB_PROJECT_ID=your-project-id

# Azure DevOps
AZURE_DEVOPS_ORG=your-organization
AZURE_DEVOPS_PROJECT=your-project
AZURE_DEVOPS_PAT=your-personal-access-token

# ==================================
# DOCKER CONFIGURATION
# ==================================
DOCKER_REGISTRY=youracr.azurecr.io
DOCKER_IMAGE_TAG=latest
DOCKER_NETWORK=microsoft-stack-network

# ==================================
# TESTING
# ==================================
TEST_MODE=false
MOCK_AZURE_SERVICES=false
TEST_DATA_PATH=./tests/data
