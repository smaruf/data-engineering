# ==================== Snowflake Configuration ====================
# Get these from your Snowflake account
SNOWFLAKE_ACCOUNT=your_account_identifier
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=DEMO_DB
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=ACCOUNTADMIN

# Optional: For Snowpark
SNOWFLAKE_WAREHOUSE_SIZE=XSMALL

# ==================== Databricks Configuration ====================
# Get these from your Databricks workspace
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your_access_token
DATABRICKS_CLUSTER_ID=your_cluster_id

# Databricks SQL Warehouse (for SQL endpoints)
DATABRICKS_SQL_WAREHOUSE_ID=your_sql_warehouse_id

# Databricks paths
DATABRICKS_WORKSPACE_PATH=/Workspace/Users/your_email@domain.com
DATABRICKS_DBFS_PATH=/dbfs/FileStore/

# ==================== Cloud Storage Configuration ====================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_CONTAINER_NAME=your-container

# GCP Cloud Storage
GCP_PROJECT_ID=your_project_id
GCP_BUCKET_NAME=your-gcp-bucket

# ==================== Database Configuration ====================
# PostgreSQL (for local testing)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=demo_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ==================== Application Configuration ====================
# Environment
ENVIRONMENT=development  # development, staging, production

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, text

# Data paths
DATA_DIR=./data
OUTPUT_DIR=./output
LOGS_DIR=./logs

# ==================== MLflow Configuration ====================
MLFLOW_TRACKING_URI=databricks  # or http://localhost:5000 for local
MLFLOW_EXPERIMENT_NAME=/Users/your_email@domain.com/experiments

# ==================== Kafka Configuration (Optional) ====================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=demo-topic

# ==================== API Keys (Optional) ====================
# Add any API keys for data sources
API_KEY_EXAMPLE=your_api_key_here
