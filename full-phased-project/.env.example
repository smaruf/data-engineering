# Full Phased Data Engineering Project Environment Configuration

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# PostgreSQL Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=data_engineering
POSTGRES_USER=data_eng
POSTGRES_PASSWORD=password123

# Database URLs
DATABASE_URL=postgresql://data_eng:password123@localhost:5432/data_engineering
AIRFLOW_DATABASE_URL=postgresql://airflow:airflow@localhost:5432/airflow

# ==============================================
# KAFKA CONFIGURATION (Phase 2)
# ==============================================

KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=data_eng
KAFKA_CONSUMER_GROUP=data_eng_consumers
KAFKA_AUTO_OFFSET_RESET=earliest

# ==============================================
# REDIS CONFIGURATION
# ==============================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# AIRFLOW CONFIGURATION (Phase 2)
# ==============================================

AIRFLOW_HOME=/opt/airflow
AIRFLOW__CORE__EXECUTOR=CeleryExecutor
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here
AIRFLOW__WEBSERVER__SECRET_KEY=your_secret_key_here
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_ADMIN_EMAIL=admin@example.com

# ==============================================
# AWS CONFIGURATION (Phase 3)
# ==============================================

AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# S3 Buckets
S3_RAW_DATA_BUCKET=data-eng-raw-data
S3_PROCESSED_DATA_BUCKET=data-eng-processed-data
S3_LOGS_BUCKET=data-eng-logs

# AWS Glue
GLUE_JOB_NAME=covid-data-etl
GLUE_ROLE_ARN=arn:aws:iam::ACCOUNT_ID:role/GlueServiceRole

# Redshift (Optional)
REDSHIFT_CLUSTER_IDENTIFIER=data-eng-cluster
REDSHIFT_DATABASE=data_warehouse
REDSHIFT_USER=admin
REDSHIFT_PASSWORD=your_redshift_password
REDSHIFT_HOST=your-cluster.region.redshift.amazonaws.com
REDSHIFT_PORT=5439

# ==============================================
# API CONFIGURATIONS
# ==============================================

# COVID-19 Data API
COVID_API_BASE_URL=https://disease.sh/v3/covid-19
COVID_API_RATE_LIMIT=10

# Financial Data APIs (for streaming)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FINNHUB_API_KEY=your_finnhub_key

# ==============================================
# MONITORING & LOGGING
# ==============================================

# Log Levels
LOG_LEVEL=INFO
LOG_FORMAT=json

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# ==============================================
# APPLICATION SETTINGS
# ==============================================

# Environment
ENVIRONMENT=development
DEBUG=True

# Data Processing
BATCH_SIZE=1000
MAX_RETRIES=3
RETRY_DELAY=5

# Rate Limiting
REQUESTS_PER_SECOND=10
MAX_CONCURRENT_REQUESTS=5

# ==============================================
# SECURITY SETTINGS
# ==============================================

# Encryption
ENCRYPTION_KEY=your_encryption_key_here

# SSL/TLS
SSL_VERIFY=True
SSL_CERT_PATH=
SSL_KEY_PATH=

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================

# Testing
TEST_DATABASE_URL=postgresql://data_eng:password123@localhost:5432/data_engineering_test
PYTEST_WORKERS=4

# Development Tools
AUTO_RELOAD=True
DEBUG_MODE=True

# ==============================================
# TERRAFORM VARIABLES (Phase 3)
# ==============================================

TF_VAR_aws_region=us-east-1
TF_VAR_project_name=full-phased-data-eng
TF_VAR_environment=dev
TF_VAR_enable_redshift=false